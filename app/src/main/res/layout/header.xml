<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView android:layout_width="34dp" android:layout_height="34dp" android:src="@drawable/football01"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
               android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/imageView9"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Match 01" android:textStyle="bold" android:textColor="@android:color/black"
              app:layout_constraintStart_toEndOf="@+id/imageView9"
              android:layout_marginStart="8dp" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView17"
              app:layout_constraintHorizontal_bias="0.0"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="13 Sep 2018"
              app:layout_constraintTop_toBottomOf="@+id/textView17"
              app:layout_constraintStart_toStartOf="@+id/textView17" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>

    <android.support.constraint.ConstraintLayout android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 app:layout_constraintTop_toBottomOf="@+id/imageView9"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:id="@+id/constraintLayout5"
                                                 android:layout_marginBottom="16dp"
                                                 android:background="@drawable/background"
                                                 android:padding="16dp"
                                                 app:layout_constraintBottom_toBottomOf="parent"
                                                 app:layout_constraintVertical_bias="0.0"
                                                 android:layout_marginTop="16dp"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 app:layout_constraintHorizontal_bias="0.25"
                                                 android:layout_marginEnd="32dp">

        <ImageView android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/football01"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                   android:id="@+id/imageView10"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dallas Cowboys"
                  android:textColor="@android:color/black"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/imageView10"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.0"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 app:layout_constraintTop_toTopOf="@+id/constraintLayout5"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 app:layout_constraintBottom_toBottomOf="parent"
                                                 android:background="@drawable/background"
                                                 android:padding="16dp"
                                                 app:layout_constraintVertical_bias="0.0"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="32dp"
                                                 app:layout_constraintHorizontal_bias="0.75">

        <ImageView android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/football01"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                   android:id="@+id/imageView11"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dallas Cowboys"
                  android:textColor="@android:color/black"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/imageView11"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.0"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>