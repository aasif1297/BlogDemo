<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dallas Cowboys"
              android:textColor="@android:color/black" android:textStyle="bold" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView22"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
              android:layout_marginStart="16dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Point Spread"
              app:layout_constraintStart_toStartOf="@+id/textView22" android:layout_marginTop="4dp"
              app:layout_constraintTop_toBottomOf="@+id/textView22" android:id="@+id/textView23"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="11/8/18 07:20 PM"
              app:layout_constraintStart_toStartOf="@+id/textView23"
              android:layout_marginTop="4dp"
              app:layout_constraintTop_toBottomOf="@+id/textView23" android:id="@+id/textView30"/>
    <TextView
            android:text="Private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView25" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginEnd="16dp"/>
    <Switch

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toStartOf="@+id/textView25"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView26"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/switch1" android:layout_marginEnd="12dp"/>
    <TextView
            android:text="Risk" android:background="@drawable/text_bg"
            android:padding="8dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView27"
            app:layout_constraintTop_toBottomOf="@+id/textView30"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView30" android:layout_marginTop="24dp"/>
    <TextView
            android:text="Win" android:background="@drawable/text_bg"
            android:padding="8dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView28" app:layout_constraintStart_toEndOf="@+id/textView27"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView27" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"/>


</android.support.constraint.ConstraintLayout>